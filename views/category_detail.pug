extends layout

block content

  h1 Category: #{category.name}
  p= category.description

  div(style='margin-left:20px;margin-top:20px')

    h4 Items

    dl
      each item in category_items
        dt
          a(href=item.url) #{item.name}
        dd #{item.description}

      else
        p This category has no items
  hr
  p 
    a(href='/item/create') Add more #{category.name}
  p
    a(href=category.url +'/update') Update
  p
    a(href=category.url+'/delete') Delete Category
