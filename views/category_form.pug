extends layout

block content
    h1= title

    form(action="" method='POST') 
        label(for="name") Name 
        input#name(type='text' placeholder="Name" name='name' required='true' value=(category===undefined?'':category.name)) 
        label(for="description") Description 
        input#description(type='text' placeholder="Description" name='description' required='true' value=(category===undefined?'':category.description)) 
        button(type='submit') Submit


    if errors
     ul
      for error in errors
        li!= error.msg